                </thead>
                <tbody id="area_body"></tbody>
            </table>

        </div>
        <div id="chartFailRate" class="col-4 border" style="height: 370px;"></div>
        <div id="chartPerformance" class="col-4 border ml-2" style="height: 370px;"></div>
    </div>
    <div class="row mt-5">
